{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "esnext.asynciterable", "dom"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "types": ["@types/node", "@nuxt/types", "@types/chart.js", "@nuxtjs/axios"]
    },
    "include": ["**/*.ts", "**/*.vue"],
    "exclude": ["node_modules"],
    "files": ["ts-shim.d.ts"]
}
